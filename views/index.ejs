<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://aframe.io/releases/1.5.0/aframe.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/mind-ar@1.2.5/dist/mindar-image-aframe.prod.js"></script>
  <style>
     .loading {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 24px;
        color: #ffffff;
      }

  </style>
</head>
<body>
  <div class="loading">Loading...</div>

  <a-scene id="scene" mindar-image="imageTargetSrc: /<%= userId %>.mind" color-space="sRGB" renderer="colorManagement: true, physicallyCorrectLights" vr-mode-ui="enabled: false" device-orientation-permission-ui="enabled: false">
    
    <a-camera position="0 0 0" look-controls="enabled: false"></a-camera>
    
    <a-entity mindar-image-target="targetIndex: 0" position="0 0 0">
      <a-image src="<%= profileImage %>" position="0 0.3 0.02" width="0.2" height="0.2"></a-image>
        
     <!-- Allergies -->
     <a-plane position="-0.35 0.35 0.01" width="0.4" height="0.2" color="#d3d3d3">
      <a-text value="Allergies" position="0 0.075 0.01" align="center" color="red" scale="0.1 0.1 0.1"></a-text>
      <a-text value="<%= allergies.join('\n') %>" position="0 -0.025 0.01" align="center" scale="0.075 0.075 0.075"></a-text>
  </a-plane>
  
  <!-- High Risk -->
  <a-plane position="0.35 0.35 0.01" width="0.4" height="0.4" color="#d3d3d3">
      <a-text value="High Risk" position="0 0.175 0.01" align="center" color="red" scale="0.1 0.1 0.1"></a-text>
      <a-text value="Conditions:\n<%= harmfulMedicalConditions.join('\n') %>" position="0 0.05 0.01" align="center" scale="0.06 0.06 0.06"></a-text>
      <a-text value="Medications:\n<%= harmfulMedications.join('\n') %>" position="0 -0.1 0.01" align="center" scale="0.06 0.06 0.06"></a-text>
  </a-plane>
  
  <!-- Patient Info -->
  <a-plane position="0 0 0.01" width="0.4" height="0.15" color="#add8e6">
      <a-text value="<%= legalName %>\n<%= age %>\nBlood Type: s<%= bloodType %>" position="0 0 0.01" align="center" scale="0.075 0.075 0.075"></a-text>
  </a-plane>
  
  <!-- Emergency Contact -->
  <a-plane position="-0.35 -0.35 0.01" width="0.4" height="0.2" color="#d3d3d3">
      <a-text value="Emergency Contact" position="0 0.075 0.01" align="center" scale="0.075 0.075 0.075"></a-text>
      <a-text value="<% emergencyContacts.forEach(function(contact) { %><%= contact.name %>\n<%= contact.phone %>\n<% }); %>" position="0 -0.05 0.01" align="center" scale="0.05 0.05 0.05"></a-text>
  </a-plane>
  
  <!-- Doctors Contact -->
  <a-plane position="0.35 -0.35 0.01" width="0.4" height="0.2" color="#d3d3d3">
      <a-text value="Doctors Contact" position="0 0.075 0.01" align="center" scale="0.075 0.075 0.075"></a-text>
      <a-text value="<% doctorContacts.forEach(function(contact) { %><%= contact.name %>\n<%= contact.phone %>\n<% }); %>" position="0 -0.05 0.01" align="center" scale="0.05 0.05 0.05"></a-text>
  </a-plane>
    </a-entity>
  </a-scene>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Hide loading indicator
      document.querySelector('.loading').style.display = 'none';
      document.querySelector('#scene').setAttribute('visible', 'true');
    });
  </script>
</body>
</html>

