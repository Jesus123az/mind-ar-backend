<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://aframe.io/releases/1.5.0/aframe.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/mind-ar@1.2.5/dist/mindar-image-aframe.prod.js"></script>
  <style>
    .loading {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 20px;
    }
    a-text {
      color: #fff;
      font-family: Arial, sans-serif;
      align: center;
      width: 2;
    }
    a-image {
      width: 1.5;
      height: 1.5;
    }
  </style>
</head>
<body>
  <div class="loading">Loading...</div>

  <a-scene id="scene" mindar-image="imageTargetSrc: /<%= userId %>.mind" color-space="sRGB" renderer="colorManagement: true, physicallyCorrectLights" vr-mode-ui="enabled: false" device-orientation-permission-ui="enabled: false">
    <a-camera position="0 0 0" look-controls="enabled: false"></a-camera>
    
    <!-- Profile Section (Center) -->
    <a-entity position="0 0 0">
      <a-image src="<%= profileImage %>" position="0 0.5 0" width="1.5" height="1.5"></a-image>
      <a-text value="<%= legalName %>" color="#000" position="0 -1.2 0" align="center"></a-text>
      <a-text value="<%= age %>" color="#000" position="0 -1.5 0" align="center"></a-text>
      <a-text value="Blood Type: <%= bloodType %>" color="#FF0000" position="0 -1.8 0" align="center"></a-text>
    </a-entity>

    <!-- High Risk Section (Left) -->
    <a-entity position="-3 0 0">
      <a-box position="0 0 0" depth="0.01" height="2" width="2.5" class="box-background"></a-box>
      <a-text value="High Risk" color="#FF0000" position="0 0.9 0" align="center" scale="2 2 2"></a-text>
      <a-text value="Conditions" color="#FF0000" position="-1 0.4 0" align="left"></a-text>
      <a-text value="<%= harmfulMedicalConditions.map(c => c.name).join(', ') %>" color="#000" position="-1 0.2 0" align="left"></a-text>
      <a-text value="Medications" color="#FF0000" position="-1 -0.3 0" align="left"></a-text>
      <a-text value="<%= harmfulMedications.map(m => m.name).join(', ') %>" color="#000" position="-1 -0.5 0" align="left"></a-text>
    </a-entity>

    <!-- Allergies Section (Top) -->
    <a-entity position="0 2 0">
      <a-box position="0 0 0" depth="0.01" height="1" width="2.5" class="box-background"></a-box>
      <a-text value="Allergies" color="#FF0000" position="0 0.3 0" align="center" scale="2 2 2"></a-text>
      <a-text value="<%= allergies.map(a => a.name).join(', ') %>" color="#000" position="0 -0.1 0" align="center"></a-text>
    </a-entity>

    <!-- Emergency Contact Section (Right) -->
    <a-entity position="3 1 0">
      <a-box position="0 0 0" depth="0.01" height="2" width="2.5" class="box-background"></a-box>
      <a-text value="Emergency Contact" color="#000" position="0 0.8 0" align="center" scale="1.5 1.5 1.5"></a-text>
      <% emergencyContacts.forEach((contact, index) => { %>
        <a-text value="<%= contact.name %>" color="#000" position="0 <%= 0.4 - (index * 0.3) %> 0" align="center"></a-text>
        <a-text value="<%= contact.number %>" color="#87CEEB" position="0 <%= 0.2 - (index * 0.3) %> 0" align="center"></a-text>
      <% }); %>
    </a-entity>

    <!-- Doctor Contact Section (Right-Bottom) -->
    <a-entity position="3 -2 0">
      <a-box position="0 0 0" depth="0.01" height="2" width="2.5" class="box-background"></a-box>
      <a-text value="Doctors Contact" color="#000" position="0 0.8 0" align="center" scale="1.5 1.5 1.5"></a-text>
      <% doctorContacts.forEach((contact, index) => { %>
        <a-text value="<%= contact.name %>" color="#000" position="0 <%= 0.4 - (index * 0.3) %> 0" align="center"></a-text>
        <a-text value="<%= contact.number %>" color="#87CEEB" position="0 <%= 0.2 - (index * 0.3) %> 0" align="center"></a-text>
      <% }); %>
    </a-entity>

  </a-scene>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Hide loading indicator
      document.querySelector('.loading').style.display = 'none';
      document.querySelector('#scene').setAttribute('visible', 'true');
    });
  </script>
</body>
</html>
